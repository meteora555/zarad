<script>
  // Создаем функцию, для отслеживания клика по бургеру и анимация бургера, путем удаления и добавления классов
  function handlerClick() {
    const burgerBtn = document.querySelector('.burger'),
      burgerBar = document.querySelectorAll('.burger__bar'),
      burgerWindow = document.querySelector('.burger__window'),
      burgerWrapper = document.querySelector('.wrapper');
    burgerBtn.addEventListener('click', () => {
      burgerBar.forEach((item) => {
        if (item.classList[1] === 'burger-unclick') {
          item.classList.remove('burger-unclick');
          item.classList.add('burger-clicked');
          burgerWindow.classList.remove('hidden');
          burgerWrapper.classList.add('wrapper_blur');
        } else {
          item.classList.add('burger-unclick');
          item.classList.remove('burger-clicked');
          burgerWindow.classList.add('hidden');
          burgerWrapper.classList.remove('wrapper_blur');
        }
      });
    });
  }
  function handlerMenuClick() {
    const menuBtn = document.querySelector('.nav__link-btn'),
      menuContent = document.querySelector('.nav__link__content'),
      arrow = document.querySelector('.nav__link-img');

    menuBtn.addEventListener('click', () => {
      menuContent.classList.toggle('visible');
      menuBtn.classList.toggle('nav__link-btn-underline');
    });
  }
  handlerClick();
  handlerMenuClick();
</script>
